// Table

.table
    background-color tablegreen
    padding 20px
    margin-top 20px
    text-align center
    ul
        width 565px
        height 140px
        margin 80px 70px
        text-align left
    height 400px
    width 800px
    border-radius 200px
    position absolute
    top 0
    right 0
    -webkit-box-shadow 0 0 30px #000
    -moz-box-shadow 0 0 30px #000
    box-shadow 0 0 30px #000
    background  url('images/table.jpg') no-repeat tablegreen
    background-size contain

@media (min-width: 1050px)
    .table
        ul
            width 665px
            height 190px
            margin 80px 70px
        height 450px
        width 900px
        border-radius 225px

@media (min-width: 1200px)
    .table
        ul
            width 865px
            height 190px
            margin 100px 120px
        height 550px
        width 1100px
        border-radius 275px
        right -50px

@media (min-width: 1800px)
    .table
        ul
            width 1265px
            height 190px
            margin 175px 180px
        height 700px
        width 1400px
        border-radius 350px
        right -50px