.react-poker-player
    .player-picker
        background darkgreen
        position absolute
        width 100%
        height 100%
        text-align center
        form
            padding-top 20px

.player-ui
    text-align center

    .slider
        width 200px
        &-label
            display inline-block
            width 70px

    .btn
        border none
        padding 5px
        margin 5px
        &-check
            display block
            width 200px
            margin auto
        &-bet
            background #0f0
            width 200px
        &-call
            width 95px
        &-fold
            width 95px
        &-reveal
            width 200px
        &-sit,
        &-stand
            background none
            color #fff
            font-weight bold
            font-size 0.8em
        &-betminus, &-betplus
            width 60px

@media (max-width: 480px)
    .player-ui
        .slider
            width 320px
            margin 10px 0
            &-label
                width 120px

        .btn
            padding 10px 5px
            margin 5px
            &-check
                width 330px
                margin 10px auto
            &-bet
                width 330px
            &-call
                width 160px
            &-fold
                width 160px
            &-reveal
                width 330px
            &-sit,
            &-stand
                font-size 0.8em
            &-betminus, &-betplus
                width 100px
